@model LinkRouter.App.Models.LinkTreeViewModel

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8"/>
    <title>@Model.Title</title>
    <link rel="icon" type="image/x-icon" href="@Model.FaviconUrl">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Model.CustomCSSUrl"/>
</head>
<body>
<main class="container">
    <header class="profile-header">
        <img
            src="@Model.AuthorIconUrl"
            alt="Profilbild von @Model.Author"
            class="author-image"
            loading="lazy"
            width="128"
            height="128"
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
        <h1 class="author">@Model.Author</h1>
        <p class="description">@Model.Description</p>
    </header>

    <nav class="link-list" aria-label="Wichtige Links">
        @foreach (var link in Model.Links)
        {
            <a href="@link.RedirectUrl"
               style="--link-color: @link.BackgroundHoverColor"
               class="link-item"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="@link.Title">
                <img src="@link.Icon" alt="" class="link-image" aria-hidden="true"/>

                <div class="link-content">
                    <span class="link-title">@link.Title</span>
                    <p class="link-description">@link.Description</p>
                </div>
            </a>
        }
    </nav>
</main>
</body>
</html>